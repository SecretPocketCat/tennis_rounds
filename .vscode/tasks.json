{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "cargo",
      "command": "build",
      "problemMatcher": ["$rustc"],
      "group": "build",
      "label": "rust: cargo build"
    },
    {
      "type": "cargo",
      "command": "run",
      "problemMatcher": ["$rustc"],
      "label": "rust: cargo run"
    },
    {
      "type": "cargo",
      "command": "run",
      "args": ["--features", "bevy/dynamic"],
      "problemMatcher": ["$rustc"],
      "label": "bevy: run dynamic"
    },
    {
      "type": "cargo",
      "command": "run",
      "args": ["--features", "bevy/dynamic,debug"],
      "problemMatcher": ["$rustc"],
      "label": "bevy: run dynamic debug"
    }
  ]
}
